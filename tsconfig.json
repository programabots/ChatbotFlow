{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "client/src/main.tsx",
    "client/src/App.tsx",
    "client/index.html",
    "client/src/index.css",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.*",
    "client/src/pages/**/*",
    "client/src/components/**/*",
    "client/src/hooks/**/*",
    "client/src/lib/**/*"
  ]
}
