{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["server/**/*.ts", "shared/**/*.ts", "client/**/*.ts", "client/**/*.tsx"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.*"]
}
