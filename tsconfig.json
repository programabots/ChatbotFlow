{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "client/**/*.ts",
    "client/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.*"
  ]
}
